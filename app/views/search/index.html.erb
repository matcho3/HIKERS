    <th>car_image</th><th>profile_image</th><th>Departure</th><th>Destination</th><th>Capacity</th><th>Destination</th><th>check</th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
  	<td><%= profile_image_for current_user %></td>
    <td><%= profile_image_for current_user %></td>
  	<td><%= trip.departure %></td>
    <td><%= trip.departure %></td>
    <td><%= trip.destination %></td>
    <td><%= trip.capacity %></td>
    <td><%= link_to trips_search_path(trip), class: "btn btn-large btn-primary" do %>
    	<i class="fa fa-thumbs-o-up"></i>
    	<% end %>
    </td>
  </tr>
<% end %>
</table>