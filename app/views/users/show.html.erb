  <% @user %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
    <div class="panel">
      <div class="panel-heading resume-heading">
        <div class="row">
          <div class="col-lg-12">
            <div class="col-xs-12 col-sm-4 profile">
              <figure>
                 <%= profile_image_for @user, size: '300x300', class: "img-circle img-responsive" %>
                <!-- <img class="img-circle img-responsive" alt="" src="http://placehold.it/300x300"> -->
                <!-- <hr> -->
               
              </figure>
              
              <div class="row">
                
              </div>
              
            </div>

            <div class="col-xs-12 col-sm-8">

              <ul class="list-group">
                <%if @user == current_user %>
               <h1 class="username"><%= @user.name %>

                <%= link_to edit_user_path(@user) do %>
                 <i class="fa2 fa-pencil-square-o"></i>
                <% end %>


               </h1>





               <% else %>
               <h1 class="username"><%= @user.name %></h1>
               <% end %>
                <li class="list-group-item">Senior Software Engineer</li>
                <li class="list-group-item">google inc.</li>
                <li class="list-group-item"><i class="fa fa-phone"></i> 000-000-0000 </li>
                <li class="list-group-item"><i class="fa fa-envelope"></i> john@example.com</li>

              </ul>
            </div>
          </div>
        </div>
       </div>
      <div class="bs-callout">
        <h4>About <%= @user.name %></h4>
        <table class="table table-striped table-responsive ">
          <thead>
            <tr><th>Date of Issue</th>
            <th>When to get License</th>
            <!-- <th>CGPA</th> -->
          </tr></thead>
          <tbody>
            <tr>
              <td><%#= @trip.driver.time_get_license %></td>
              <td><%#= @trip.driver.license_history %></td>
              <!-- <td> 3.50 </td> -->
            </tr>
          </tbody>
        </table>
        <h4></h4>
      </div>
      


      <div class="bs-callout">
         <h4>Time Schedule  </h4>
         <h3><%#= @trip.leaving_time %><h3>
      </div>





      <div class="bs-callout">
        <h4>Root of Trips </h4>
         <h3><%#= @trip.departure %> >>>> <%#= @trip.destination %><h3>
      </div>


    </div>

  </div>
</div>
    
