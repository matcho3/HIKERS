<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <%= link_to 'レビューを書く', new_review_path %>
  <h2>MY TRIPS</h2>
   <table border="1">
    <tr>
      <th>car_image</th><th>Departure</th><th>Destination</th><th>leaving_time</th><th>Capacity</th><th>Price</th>
    </tr>
    <% if !@user.driver == nil %>
      <% @trips.each do |trip| %>
        <tr>
          <td><%= link_to profile_car_image_for(trip.driver), book_user_path  %></td>
          <td><%= trip.departure %></td>
          <td><%= trip.destination %></td>
          <td><%= trip.leaving_time %></td>
          <td><%= trip.capacity %></td>
          <td><%= trip.price %></td>
        </tr>
        <h2>You got a trip request From<%= @user.name %> !! YAY :)</h2>
      <% end %>
    <% end %>
  </table>
  <h2>MY REVIEW</h2>
  <!--twitterと同様にreviewを表示。pagenate -->
  <section>
    self-introduction: <%= current_user.self_introduction %><br>
    location:<%= current_user.location %><br>
    school:<%= current_user.school %><br>
    workplace:<%= current_user.workplace %>
  </section>  
</div>


