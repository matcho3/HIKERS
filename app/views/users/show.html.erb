<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
        <%= render 'reviews/form' %>
    </section>
  </aside>
<div class="span8">
    <% if @feed_reviews.any? %>
      <h3>Reviews</h3>
      <ol class="microposts">
        <%= render @feed_reviews %>
      </ol>
      <%= will_paginate @feed_reviews %>
    <% end %>
  </div>
</div>
<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Back', users_path %>
