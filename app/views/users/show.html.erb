<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= profile_image_for @user %>
        <%= @user.name %>
        <%= @user.birthday %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.reviews.any? %>
      <h3>Reviews (<%= @user.reviews.count %>)</h3>
      <ol class="microposts">
        <%= render @reviws %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>
</div>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>


