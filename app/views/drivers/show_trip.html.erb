<h1>My trip</h1>
<table border="1">
  <tr>
    <th>Departure</th><th>Destination</th><th>leaving_time</th><th>Capacity</th><th>Price</th>
  </tr>
  <% if @trips.any? %>
  	<div>
  		<% @trips.each do |trip| %>
            <tr>
    			<td><%= trip.departure %></td>
    			<td><%= trip.destination %></td>
    			<td><%= trip.leaving_time %></td>
    			<td><%= trip.capacity %></td>
    			<td><%= trip.price %></td>
			</tr>
        <% end %>
  	</div>
  <% end %>
</table>

