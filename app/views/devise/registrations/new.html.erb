
  <!-- <div class="container"> -->

  <div id="login-form">
   <!--  <h3>Login</h3> -->
   <fieldset class="field-width">
   <h3>Sign up</h3>
    <%= devise_error_messages! %>

      <!-- <form action="javascript:void(0);" method="get"> -->
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      

        <!-- <input type="email" required value="Email" onBlur="if(this.value=='')this.value='Email'" onFocus="if(this.value=='Email')this.value='' "> --> <!-- JS because of IE support; better: placeholder="Email" -->
        
        <%= f.email_field :email, autofocus: true, placeholder: "email" %>
        


       
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

      
    <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirmation" %>

        <!-- <input type="submit" value="Login"> -->
        <%= f.submit "Sign up" %>
        
        <footer class="clearfix">

          <p><span class="info">?</span><a href="#">Forgot Password</a></p>

        </footer>

      <!-- </form> -->
      <% end %>
    </fieldset>

  </div> <!-- end login-form -->
 

